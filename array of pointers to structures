#include <stdio.h>
#include <stdlib.h>

struct Book{
int id;
char title[50];
char author[50];
};
int main(){
struct Book b1={101,"C programming","Dennis Richie"};
struct Book b2={102,"Data Structures","Marks Weiss"};
struct Book b3={103,"Operating Systems","Silberschatz"};

//Array of pointers to structure
struct Book*books[3]={&b1,&b2,&b3};

int searchID,i,found=0;
printf("Enter Book ID to search:");
scanf("%d",&searchID);
for(i=0;i<3;i++){
    if(books[i]->id==searchID){
        printf("|NBook Found:\n");
        printf("ID:%d\n",books[i]->title);
        printf("Author:",books[i]->author);
        found=1;
        break;
    }
}
if(!found)
    printf("\nBook Not Found!\m");
return 0;
}
