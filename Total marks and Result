#include <stdio.h>
int main()
{
float m1,m2,m3,total,average;
char grade;
printf("Enter marks for three subjects(out of 100):");
scanf("%f%f%f",&m1,&m2,&m3);
//Arithmetic operations
total=m1+m2+m3;
avesrage=total/3;
//Display total and average
printf("\nTotal Marks=%.2f",total);
printf("\nAverage Marks=%.2f",average);
//Determine grade using if-else
if(avearge>=90)
grade='A';
else if(avearge>=80)
grade='B';
else if(avearge>=70)
grade='C';
else if(avearge>=60)
grade='D';
else if(avearge>=50)
grade='E';
else
grade='F';
//Display grade
printf("\nGrade=%c",grade);
//Determine Pass/Fail
if(average>=50)
printf("\nResult:PASS\n");
else
printf("\nResult:FAIL\n");

return 0;
}

output
Enter marks for three subjects(out of 100):85 78 92

Total Marks=255.00
Average Marks=85.00
Grade=B
Result=PASS
